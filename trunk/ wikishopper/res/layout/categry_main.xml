<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="4px" android:background="@drawable/background_3">	

	<include android:id="@+id/search" layout="@layout/search" />

	<ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_below="@id/search"
		android:drawSelectorOnTop="false"
		android:layout_height="wrap_content" android:layout_above="@+id/category_list_back_button"/>
	<Button android:layout_alignParentBottom="true" android:id="@+id/category_list_back_button" android:layout_height="wrap_content" android:layout_width="wrap_content" android:drawableLeft="@drawable/ic_action_backbutton"></Button>

</RelativeLayout>
